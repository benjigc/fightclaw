{
  "name": "fightclaw",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@cloudflare/workers-types": "^4.20251213.0",
      "alchemy": "^0.82.1",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @fightclaw/db db:push",
    "db:generate": "turbo -F @fightclaw/db db:generate",
    "deploy": "turbo -F @fightclaw/infra deploy",
    "destroy": "turbo -F @fightclaw/infra destroy",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@fightclaw/env": "workspace:*",
    "alchemy": "^0.83.1",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@cloudflare/workers-types": "catalog:",
    "@fightclaw/config": "workspace:*",
    "@types/node": "catalog:",
    "lefthook": "^2.0.13",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "@types/bun": "latest"
  },
  "packageManager": "bun@1.3.5",
  "module": "index.ts"
}
