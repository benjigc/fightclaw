{
	"name": "@fightclaw/sim",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"scripts": {
		"sim:single": "tsx src/cli.ts single --seed 1 --maxTurns 200 --verbose",
		"sim:tourney": "tsx src/cli.ts tourney --games 200 --seed 1 --maxTurns 200",
		"sim:mass": "tsx src/cli.ts mass --output ./results",
		"sim:analyze": "tsx src/cli.ts analyze --input ./results",
		"sim:dashboard": "tsx src/cli.ts dashboard --input ./results",
		"benchmark:v1": "tsx scripts/benchmark-v1.ts",
		"benchmark:v1:api": "tsx scripts/benchmark-v1.ts --withApi",
		"benchmark:v2": "tsx scripts/benchmark-v2.ts",
		"benchmark:v2:api_full": "tsx scripts/benchmark-v2.ts --withApi --apiOnly --apiLane api_full --gamesPerMatchup 1 --apiGamesPerMatchup 1 --apiParallelMatchups 2 --apiMaxTurns 120 --apiLlmParallelCalls 1 --apiLlmTimeoutMs 20000 --apiLlmMaxRetries 2 --apiLlmRetryBaseMs 600 --apiLlmMaxTokens 280 --apiCommandTimeoutMs 240000 --apiCommandRetries 1 --resume false",
		"benchmark:v2:api_smoke": "tsx scripts/benchmark-v2.ts --withApi --apiOnly --apiLane api_smoke --gamesPerMatchup 1 --apiGamesPerMatchup 1 --apiParallelMatchups 2 --apiMaxTurns 80 --apiLlmParallelCalls 1 --apiLlmTimeoutMs 20000 --apiLlmMaxRetries 2 --apiLlmRetryBaseMs 600 --apiLlmMaxTokens 280 --apiCommandTimeoutMs 180000 --apiCommandRetries 1 --resume false",
		"benchmark:v2:api": "pnpm run benchmark:v2:api_full",
		"benchmark:v2:api:full": "pnpm run benchmark:v2:api_full",
		"benchmark:v2:api:smoke": "pnpm run benchmark:v2:api_smoke",
		"export:web-replay": "tsx scripts/export-web-replay.ts",
		"benchmark:v2:api_full:viz": "pnpm run benchmark:v2:api_full && pnpm run export:web-replay",
		"benchmark:v2:api_smoke:viz": "pnpm run benchmark:v2:api_smoke && pnpm run export:web-replay",
		"scratch:test-game": "tsx scripts/scratch/test-game.ts",
		"scratch:test-llm": "tsx scripts/scratch/test-llm.ts",
		"scratch:test-parse": "tsx scripts/scratch/test-parse.ts",
		"test": "bun test"
	},
	"dependencies": {
		"@fightclaw/engine": "workspace:*",
		"boardgame.io": "^0.50.2",
		"minimist": "^1.2.8",
		"openai": "^6.18.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/minimist": "^1.2.5",
		"@types/node": "^22.13.1",
		"tsx": "^4.19.2",
		"typescript": "^5.5.4"
	}
}
